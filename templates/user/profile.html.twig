{% extends 'base.html.twig' %}

{% block title %}Profil de
	{{ user.firstname }}
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="card shadow-lg">
			<div class="card-header bg-primary text-white">
				<h3 class="mb-0 text-center">Votre profil</h3>
			</div>
			<div class="card-body">
				<p>
					<strong>Email :</strong>
					{{ user.email }}</p>
				<p>
					<strong>Prénom :</strong>
					{{ user.firstname }}</p>
				<p>
					<strong>Nom :</strong>
					{{ user.lastname }}</p>
				<p>
					<strong>Rôles :</strong>
					{{ user.roles | join(', ') }}</p>
				<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier mon profil</a>
			</div>
		</div>
	</div>
{% endblock %}
