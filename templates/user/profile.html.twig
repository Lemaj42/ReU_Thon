{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('styles/index.css') }}">
{% endblock %}

{% block title %}Profil de
	{{ user.firstname }}
{% endblock %}

{% block body %}
	<div class="login-container">
		<div class="login-box">
			<div class="login-content">
				<div class="login-header">
					<h1>Votre
						<strong>Profil</strong>
					</h1>
				</div>

				<div class="card-body">
					<p>
						<strong>Email :</strong>
						{{ user.email }}</p>
					<p>
						<strong>Prénom :</strong>
						{{ user.firstname }}</p>
					<p>
						<strong>Nom :</strong>
						{{ user.lastname }}</p>
					<p>
						<strong>Rôles :</strong>
						{{ user.roles | join(', ') }}</p>
					<div class="login-buttons">
						<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-login">Modifier mon profil</a>
					</div>
				</div>
			</div>
			<div class="login-image"></div>
		</div>
	</div>
{% endblock %}
