{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/Users/profile.css') }}">
{% endblock %}

{% block title %}Profil de
	{{ user.firstname }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="Tittle">VOTRE PROFIL</h1>
		<div class="card">
			<div class="card-header">
				<h2 class="card-title">Détails du profil</h2>
			</div>
			<div class="card-body">
				<div class="profile-info">
					<p>
						<strong>Email :</strong>
						{{ user.email }}</p>
					<p>
						<strong>Prénom :</strong>
						{{ user.firstname }}</p>
					<p>
						<strong>Nom :</strong>
						{{ user.lastname }}</p>
					<p>
						<strong>Rôles :</strong>
						{{ user.roles | join(', ') }}</p>
				</div>
			</div>
			<div class="card-footer">
				<div class="action-buttons">
					<div class="button-group">
						<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn-details flex-grow">
							<i class="fas fa-edit"></i>
							Modifier mon profil
						</a>
						<a href="{{ path('app_meeting_index') }}" class="btn-details flex-grow">
							<i class="fas fa-list"></i>
							Retour à la liste
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
