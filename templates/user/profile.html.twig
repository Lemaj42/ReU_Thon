{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/showMeeting.css') }}">
{% endblock %}

{% block title %}
	Profil de
	{{ user.firstname }}
{% endblock %}

{% block body %}
	<div class="container my-5">
		<h1 class="Tittle mb-4">VOTRE PROFIL</h1>

		<div class="row">
			<div class="col-lg-8 mb-4">
				<article class="card">
					<div class="card-header">
						<h2 class="card-title h3 mb-0">Détails du profil</h2>
					</div>
					<div class="card-body">
						<ul class="list-unstyled">
							<li>
								<strong>Email :</strong>
								{{ user.email }}
							</li>
							<li>
								<strong>Prénom :</strong>
								{{ user.firstname }}
							</li>
							<li>
								<strong>Nom :</strong>
								{{ user.lastname }}
							</li>
							<li>
								<strong>Rôles :</strong>
								{{ user.roles | join(', ') }}
							</li>
						</ul>
					</div>

					<div class="card-footer">
						<div class="action-buttons">
							<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-details">Modifier mon profil</a>
							<a href="{{ path('app_meeting_index') }}" class="btn btn-details">Retour à la liste</a>
						</div>
					</div>
				</article>
			</div>
		</div>
	</div>
{% endblock %}
