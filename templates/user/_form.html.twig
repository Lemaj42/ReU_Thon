{{ form_start(form, {'attr': {'id': 'user_form', 'class': 'user-admin-form'}}) }}

{# Affichage des messages flash #}
{% for flash_error in app.flashes('error') %}
	<div class="user-admin-alert user-admin-alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}

<div class="user-admin-form-group">
	{{ form_label(form.firstname, 'Pr√©nom', {'label_attr': {'class': 'user-admin-form-label'}}) }}
	{{ form_widget(form.firstname, {'attr': {'class': 'user-admin-form-control'}}) }}
	{{ form_errors(form.firstname, {'attr': {'class': 'user-admin-form-error'}}) }}
</div>

<div class="user-admin-form-group">
	{{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'user-admin-form-label'}}) }}
	{{ form_widget(form.lastname, {'attr': {'class': 'user-admin-form-control'}}) }}
	{{ form_errors(form.lastname, {'attr': {'class': 'user-admin-form-error'}}) }}
</div>

<div class="user-admin-form-group">
	{{ form_label(form.email, 'Email', {'label_attr': {'class': 'user-admin-form-label'}}) }}
	{{ form_widget(form.email, {'attr': {'class': 'user-admin-form-control'}}) }}
	{{ form_errors(form.email, {'attr': {'class': 'user-admin-form-error'}}) }}
</div>

{{ form_end(form) }}
