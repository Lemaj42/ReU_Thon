{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/Users/newUserAdmin.css') }}">

{% endblock %}

{% block title %}Créer un nouvel utilisateur
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="Title">Créer un nouvel utilisateur</h1>
		<div class="card">
			<div class="card-header">
				<h2 class="card-Title">Détails de l'utilisateur</h2>
			</div>
			<div class="card-body">
				{% include 'user/_form.html.twig' %}
			</div>
			<div class="card-footer">
				<div class="action-buttons">
					<div class="button-group">
						<button type="submit" form="user_form" class="btn-details flex-grow">
							<i class="fas fa-plus-circle"></i>
							Créer l'utilisateur
						</button>
						<a href="{{ path('app_user_index') }}" class="btn-details flex-grow">
							<i class="fas fa-times-circle"></i>
							Annuler
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
