{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/new.user.css') }}">
{% endblock %}

{% block title %}Create New User
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="card shadow-lg">
			<div class="card-header bg-primary text-white">
				<h3 class="mb-0 text-center">Create New User</h3>
			</div>
			<div class="card-body">
				{{ form_start(form) }}
				<div class="mb-3">
					{{ form_widget(form) }}
				</div>
				<div class="text-center">
					<button class="btn btn-primary">Save</button>
					<a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to list</a>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
