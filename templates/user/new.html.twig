{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/showMeeting.css') }}">
{% endblock %}

{% block title %}Créer un nouveau compte
{% endblock %}

{% block body %}
	<div class="container my-5">
		<h1 class="Tittle mb-4">Créer un nouveau compte</h1>

		<div class="row">
			<div class="col-lg-8 mb-4">
				<article class="card">
					<div class="card-header">
						<h2 class="card-title h3 mb-0">Inscris-toi !</h2>
					</div>
					<div class="card-body">
						{{ form_start(form) }}
						<div class="form-group">
							{{ form_widget(form) }}
						</div>
					</div>
					<div class="card-footer">
						<div class="action-buttons">
							<button class="btn btn-details">Créer un compte</button>
						</div>
						{{ form_end(form) }}
					</div>
				</article>
			</div>
		</div>
	</div>
{% endblock %}
