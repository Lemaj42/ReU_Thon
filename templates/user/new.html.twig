{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/Users/newUserAdmin.css') }}">
{% endblock %}

{% block title %}Créer un nouvel utilisateur
{% endblock %}

{% block body %}
<div class="user-admin-page">
	<div class="user-admin-container">
		<h1 class="user-admin-title">Créer un nouvel utilisateur</h1>

		<div class="user-admin-card">
			<div class="user-admin-card-header">
				<h2 class="user-admin-card-title">Détails de l'utilisateur</h2>
			</div>
			<div class="user-admin-card-body">
				{% include 'user/_form.html.twig' with {'button_label': 'Créer l\'utilisateur'} %}
            </div>
            <div class="user-admin-card-footer">
                <div class="user-admin-actions">
                    <button type="submit" form="user_form" class="user-admin-btn user-admin-btn-primary">
                        <i class="fas fa-plus-circle"></i>
                        Créer l'utilisateur
                    </button>
                    <a href="{{ path('app_user_index') }}" class="user-admin-btn user-admin-btn-primary">
                        <i class="fas fa-times-circle"></i>
                        Annuler
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
