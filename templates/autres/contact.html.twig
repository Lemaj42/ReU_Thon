{% extends 'base.html.twig' %}

{% block meta %}
	<meta name="description" content="Contactez notre équipe pour obtenir des informations sur nos activités et nos événements.">
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/Autres/contact.css') }}">
{% endblock %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<div class="container mt-5 mb-5">
		<div class="text-center">
			<h1 class="display-4 fw-bold">Contactez-nous</h1>
			<p class="lead text-muted mt-3">Nous sommes là pour vous aider et répondre à toutes vos questions.</p>
		</div>

		<div class="row justify-content-center mt-5">
			<div class="col-md-8">
				<form>
					<div class="mb-4">
						<label for="name" class="form-label">Nom</label>
						<input type="text" class="form-control" id="name" placeholder="Votre nom">
					</div>

					<div class="mb-4">
						<label for="email" class="form-label">Email</label>
						<input type="email" class="form-control" id="email" placeholder="Votre email">
					</div>

					<div class="mb-4">
						<label for="message" class="form-label">Message</label>
						<textarea class="form-control" id="message" rows="4" placeholder="Votre message"></textarea>
					</div>

					<button type="submit" class="btn btn-primary btn-lg w-100">Envoyer</button>
				</form>
			</div>
		</div>

		<div class="row justify-content-center text-center mt-5">
			<div class="col-md-6">
				<h5 class="fw-bold">Coordonnées</h5>
				<p class="mt-3">
					<strong>Email :</strong>
					colette@reucap.fr</p>
				<p>
					<strong>Téléphone :</strong>
					06 08 09 14 15</p>
				<p>
					<strong>Adresse :</strong>
					9 Bis Impasse Albert Camus, 42160 Andrézieux Bouthéon</p>
			</div>
		</div>
	</div>
{% endblock %}
