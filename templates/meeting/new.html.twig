{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('styles/index.css') }}">
	<style>
		.login-container {
			display: flex;
			justify-content: center;
			align-items: center;
			min-height: 100vh;
			padding: 20px;
		}

		.login-box {
			background-color: white;
			border-radius: 10px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			padding: 40px;
			max-width: 600px;
			width: 100%;
		}

		.login-content {
			margin: 0 auto;
		}

		.login-header {
			text-align: center;
			margin-bottom: 30px;
		}

		.login-buttons {
			text-align: center;
			margin-top: 20px;
		}

		.login-image {
			display: none; /* À activer si vous avez une image à afficher */
		}
	</style>
{% endblock %}

{% block title %}New Meeting
{% endblock %}

{% block body %}
	<section class="login-container">
		<div class="login-box">
			<div class="login-content">
				<header class="login-header">
					<h1>Create new Meeting</h1>
				</header>

				<div class="card-body">
					{{ include('meeting/_form.html.twig') }}
				</div>

				<div class="login-buttons">
					<a href="{{ path('app_meeting_index') }}" class="btn btn-secondary">Back to list</a>
				</div>
			</div>
			<div class="login-image"></div>
		</div>
	</section>
{% endblock %}
