{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/Meeting/newMeeting.css') }}">
{% endblock %}

{% block title %}
	Créer un nouveau vote
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="Title">Créer un nouveau vote</h1>
		<p class="Description text-center">
			<strong>Remplissez les détails ci-dessous pour permettre aux participants de voter pour les dates des réunions.</strong>
		</p>
		<div class="card">
			<div class="card-header">
				<h2 class="card-title">Détails du vote</h2>
			</div>
			<div class="card-body">
				{% include 'meeting/_form.html.twig' %}
			</div>
			<div class="card-footer">
				<div class="action-buttons">
					<div class="button-group">
						<button type="submit" form="meeting_form" class="btn-details flex-grow">
							<i class="fas fa-plus-circle"></i>
							Créer le vote
						</button>
						<a href="{{ path('app_meeting_index') }}" class="btn-details flex-grow">
							<i class="fas fa-times-circle"></i>
							Annuler
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
