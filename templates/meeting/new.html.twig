{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/Meeting/newMeeting.css') }}">
{% endblock %}

{% block title %}Créer une nouvelle réunion
{% endblock %}

{% block body %}
	<div class="meeting-page">
		<div class="meeting-container">
			<h1 class="meeting-title">Créer une nouvelle réunion</h1>

			<div class="meeting-card">
				<div class="meeting-card-header">
					<h2 class="meeting-card-title">Détails de la réunion</h2>
				</div>
				<div class="meeting-card-body">
					{% include 'meeting/_form.html.twig' with {'button_label': 'Créer la réunion'} %}
				</div>
				<div class="meeting-card-footer">
					<div class="meeting-actions">
						<button type="submit" form="meeting_form" class="btn-details">
							<i class="fas fa-plus-circle"></i>
							Créer la réunion
						</button>
						<a href="{{ path('app_meeting_index') }}" class="btn-delete">
							<i class="fas fa-times-circle"></i>
							Annuler
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		document.addEventListener('DOMContentLoaded', (event) => {
const addFormToCollection = (e) => {
const collectionHolder = document.querySelector('.' + e.currentTarget.dataset.collectionHolderClass);
const item = document.createElement('li');
item.classList.add('meeting-form-group');

const dateNumber = collectionHolder.children.length + 1;
const dateLabel = document.createElement('strong');
dateLabel.textContent = `Date ${dateNumber} : `;
item.appendChild(dateLabel);

item.innerHTML += collectionHolder.dataset.prototype.replace(/__name__/g, collectionHolder.dataset.index);

const newInput = item.querySelector('input');
if (newInput) {
newInput.classList.add('meeting-form-control');
}

collectionHolder.appendChild(item);
collectionHolder.dataset.index = parseInt(collectionHolder.dataset.index) + 1;

addTagFormDeleteLink(item);
};

const addTagFormDeleteLink = (item) => {
const removeFormButton = document.createElement('button');
removeFormButton.innerText = 'Supprimer cette date';
removeFormButton.classList.add('meeting-btn', 'meeting-btn-danger');

item.appendChild(removeFormButton);

removeFormButton.addEventListener('click', (e) => {
e.preventDefault();
item.remove();
});
};

document.querySelectorAll('.add_item_link').forEach(btn => {
btn.addEventListener("click", addFormToCollection);
});

document.querySelectorAll('ul.bookings > li').forEach((item) => {
addTagFormDeleteLink(item);
});
});
	</script>
{% endblock %}
