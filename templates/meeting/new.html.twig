{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/showMeeting.css') }}">
{% endblock %}

{% block title %}Créer une nouvelle réunion
{% endblock %}

{% block body %}
	<div class="container my-5">
		<h1 class="Tittle mb-4">Créer une nouvelle réunion</h1>

		<div class="row">
			<div class="col-lg-8 mb-4">
				<article class="card">
					<div class="card-header">
						<h2 class="card-title h3 mb-0">Détails de la réunion</h2>
					</div>
					<div class="card-body">
						{{ include('meeting/_form.html.twig') }}
					</div>
					<div class="card-footer">
						<div class="action-buttons">
							<a href="{{ path('app_meeting_index') }}" class="btn btn-details">Retour à la liste</a>
						</div>
					</div>
				</article>
			</div>
		</div>
	</div>
{% endblock %}
