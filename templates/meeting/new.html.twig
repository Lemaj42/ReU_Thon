{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/Meeting/newMeeting.css') }}">
{% endblock %}

{% block title %}Créer une nouvelle réunion
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="Tittle">Créer une nouvelle réunion</h1>
		<div class="card">
			<div class="card-header">
				<h2 class="card-title">Détails de la réunion</h2>
			</div>
			<div class="card-body">
				{% include 'meeting/_form.html.twig' %}
			</div>
			<div class="card-footer">
				<div class="action-buttons">
					<div class="button-group">
						<button type="submit" form="meeting_form" class="btn-details flex-grow">
							<i class="fas fa-plus-circle"></i>
							Créer la réunion
						</button>
						<a href="{{ path('app_meeting_index') }}" class="btn-details flex-grow">
							<i class="fas fa-list"></i>
							Retour à la liste
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
