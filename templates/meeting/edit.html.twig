{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/Meeting/editMeeting.css') }}">
{% endblock %}

{% block title %}Modifier la réunion :
	{{ meeting.title }}
{% endblock %}

{% block body %}
	<div class="meeting-edit-page">
		<div class="meeting-edit-container">
			<h1 class="meeting-edit-title">Modifier la réunion :
				{{ meeting.title }}</h1>

			<div class="meeting-edit-card">
				<div class="meeting-edit-card-header">
					<h2 class="meeting-edit-card-title">Détails de la réunion</h2>
				</div>
				<div class="meeting-edit-card-body">
					{% include 'meeting/_form.html.twig' with {'button_label': 'Enregistrer les modifications'} %}
				</div>
				<div class="meeting-edit-card-footer">
					<div class="meeting-edit-actions">
						<button type="submit" form="meeting_form" class="meeting-edit-btn meeting-edit-btn-primary">
							<i class="fas fa-save"></i>
							Enregistrer les modifications
						</button>
						<a href="{{ path('app_meeting_show', {'id': meeting.id}) }}" class="meeting-edit-btn meeting-edit-btn-primary">
							<i class="fas fa-arrow-left"></i>
							Retour aux détails
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		document.addEventListener('DOMContentLoaded', (event) => {
const addFormToCollection = (e) => {
const collectionHolder = document.querySelector('.' + e.currentTarget.dataset.collectionHolderClass);
const item = document.createElement('li');
item.classList.add('meeting-edit-form-group');

const dateNumber = collectionHolder.children.length + 1;
const dateLabel = document.createElement('strong');
dateLabel.textContent = `Date ${dateNumber} : `;
item.appendChild(dateLabel);

item.innerHTML += collectionHolder.dataset.prototype.replace(/__name__/g, collectionHolder.dataset.index);

const newInput = item.querySelector('input');
if (newInput) {
newInput.classList.add('meeting-edit-form-control');
}

collectionHolder.appendChild(item);
collectionHolder.dataset.index = parseInt(collectionHolder.dataset.index) + 1;

addTagFormDeleteLink(item);
};

const addTagFormDeleteLink = (item) => {
const removeFormButton = document.createElement('button');
removeFormButton.classList.add('meeting-edit-btn', 'meeting-edit-btn-danger');

const icon = document.createElement('i');
icon.classList.add('fas', 'fa-trash-alt');

const buttonText = document.createTextNode(' Supprimer cette date');

removeFormButton.appendChild(icon);
removeFormButton.appendChild(buttonText);

item.appendChild(removeFormButton);

removeFormButton.addEventListener('click', (e) => {
e.preventDefault();
item.remove();
});
};

// Styliser le bouton "Ajouter une date"
const addItemButtons = document.querySelectorAll('.add_item_link');
addItemButtons.forEach(btn => {
btn.classList.add('meeting-edit-btn', 'meeting-edit-btn-primary');
const icon = document.createElement('i');
icon.classList.add('fas', 'fa-plus-circle');
btn.insertBefore(icon, btn.firstChild);
btn.insertBefore(document.createTextNode(' '), btn.firstChild.nextSibling);
btn.addEventListener("click", addFormToCollection);
});

// Ajouter des boutons de suppression aux éléments existants
document.querySelectorAll('ul.bookings > li').forEach((item) => {
addTagFormDeleteLink(item);
});
});
	</script>
{% endblock %}
