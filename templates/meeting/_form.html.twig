{{ form_start(form, {'attr': {'id': 'meeting_form'}}) }}
<div class="form-group">
	{{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
	{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
	{{ form_errors(form.title) }}
</div>

<div class="form-group">
	{{ form_label(form.detail, 'Détails', {'label_attr': {'class': 'form-label'}}) }}
	{{ form_widget(form.detail, {'attr': {'class': 'form-control'}}) }}
	{{ form_errors(form.detail) }}
</div>

<div class="form-group">
	{{ form_label(form.place, 'Lieu', {'label_attr': {'class': 'form-label'}}) }}
	{{ form_widget(form.place, {'attr': {'class': 'form-control'}}) }}
	{{ form_errors(form.place) }}
</div>

<h3>Dates proposées :</h3>
<ul class="bookings" data-index="{{ form.bookings|length > 0 ? form.bookings|last.vars.name + 1 : 0 }}" data-prototype="{{ form_widget(form.bookings.vars.prototype)|e('html_attr') }}">
	{% for booking in form.bookings %}
		<li class="form-group">
			<strong>Date
				{{ loop.index }}
				:</strong>
			{{ form_widget(booking.date, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(booking.date) }}
		</li>
	{% endfor %}
</ul>
<button type="button" class="add_item_link btn-details" data-collection-holder-class="bookings">
	<i class="fas fa-plus-circle"></i>
	Ajouter une date
</button>
{{ form_end(form) }}
