<form method="post" action="{{ path('app_meeting_delete', {'id': meeting.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réunion ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ meeting.id) }}">
	<button type="submit" class="btn-details btn-delete flex-grow">
		<i class="fas fa-trash-alt"></i>
		Supprimer la réunion
	</button>
</form>
