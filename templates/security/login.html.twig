{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('styles/index.css') }}">
{% endblock %}

{% block title %}Log in
{% endblock %}

{% block body %}
	<div class="login-container">
		<div class="login-box">
			<div class="login-content">
				<div class="login-header">
					<h1>Ravi de te revoir
						<strong>Connecte-toi !</strong>
					</h1>
				</div>

				{# Affichage des erreurs de connexion si elles existent #}
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{# Si l'utilisateur est déjà connecté, on affiche un message avec un lien pour se déconnecter #}
				{% if app.user %}
					<div class="mb-3">
						Vous êtes connecté en tant que
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}

				<form method="post">
					<div class="form-group">
						<label for="username">Votre Email :</label>
						<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
					</div>

					<div class="form-group">
						<label for="password">Votre mot de passe :</label>
						<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
					</div>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<div class="login-buttons">
						<button type="submit" class="btn btn-login">Connecte-toi</button>
						<div class="login-buttons">
							<a class="btn btn-login" href="{{ path('app_register') }}">Pas encore inscrit ?</a>
						</div>
					</div>
				</form>
			{% endblock %}
