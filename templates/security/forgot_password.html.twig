{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/Users/login.css') }}">
{% endblock %}

{% block title %}Réinitialisation de mot de passe
{% endblock %}

{% block body %}
	<div class="container my-5">
		<h1 class="mb-4">Réinitialisation de mot de passe</h1>
		<div class="row justify-content-center m-5">
			<div class="col-lg-8">
				<div class="card">
					<div class="card-header">
						<h2 class="card-title h3 mb-0">Entrez votre adresse e-mail</h2>
					</div>
					<div class="card-body">
						{% for type, messages in app.flashes %}
							{% for message in messages %}
								<div class="alert alert-{{ type }}">
									{{ message }}
								</div>
							{% endfor %}
						{% endfor %}

						<form method="post">
							<div class="mb-3">
								<label for="email" class="form-label">Adresse e-mail :</label>
								<input type="email" id="email" name="email" required class="form-control">
							</div>

							<div class="d-grid gap-2">
								<button type="submit" class="btn-details">
									<i class="fas fa-paper-plane"></i>
									Réinitialisation
								</button>
							</div>

							<div class="text-center mt-3">
								<a href="{{ path('app_login') }}" class="btn-details">
									<i class="fas fa-times"></i>
									Annuler
								</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
